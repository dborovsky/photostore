<h4 class="column">Featured Photos</h4>
<div class="column">
  <ul class="movies-grid no-bullet row">
    <% @photos.each do |photo| %>
      <li class="large-3 medium-4 small-12 column">
        <div class="movie-card padly">
          <%= link_to photo, class: "poster" do %>
            <%= image_tag photo.image %>
          <% end %>
          <div class="movie-info ell glassy-bg padmy padlx">
            <div class="title">
              <h6><%= photo.title %> <span>(<%= photo.photograph %>)</span></h6>
            </div>
            <p class="left price label movie-label radius">$ <%= photo.price %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>